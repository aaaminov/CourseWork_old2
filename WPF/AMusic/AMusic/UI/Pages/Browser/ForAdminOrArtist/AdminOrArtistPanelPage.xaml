<Page x:Class="AMusic.UI.Pages.Browser.ForAdminOrArtist.AdminOrArtistPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AMusic.UI.Pages.Browser.ForAdminOrArtist"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminOrArtistPanelPage">

    <Grid>
        <ScrollViewer x:Name="svMain"
                      Style="{StaticResource scrollviewer_over_content}"
                      Panel.ZIndex="0"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Visible">
            <StackPanel Orientation="Vertical"
                        Margin="12, 12, 18, 12">

                <TextBlock Style="{DynamicResource header_1}"
                           x:Name="TbkPanelName"
                           Margin="8" />

                <Button Style="{DynamicResource btn_secondary_thin}"
                        x:Name="AddAlbum"
                        Click="AddAlbum_Click"
                        HorizontalAlignment="Left"
                        Content="Добавить альбом" />


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
